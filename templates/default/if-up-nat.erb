#!/bin/sh

<%- node['bridges'].each do |bridge, b| %>
<%- next unless b[:nat] == true %>
# NAT for <%= bridge %>
/sbin/iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
/sbin/iptables -A FORWARD -i eth0 -o <%= bridge %> -m state --state RELATED,ESTABLISHED -j ACCEPT
/sbin/iptables -A FORWARD -i <%= bridge %> -o eth0 -j ACCEPT

<%- end %>
